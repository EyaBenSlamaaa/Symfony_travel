{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: url('data:image/jpeg;base64,') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .registration-container {
            max-width: 480px;
            margin: 80px auto;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 18px;
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

        .registration-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        label {
            color: #333;
            font-weight: 500;
        }

        .form-control {
            margin-bottom: 12px;
            border-radius: 6px;
        }

        .form-text {
            font-size: 12px;
            color: #666;
            margin-bottom: 10px;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color:rgb(17, 170, 204);
            border: none;
            color: white;
            padding: 10px;
            font-size: 16px;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color:rgb(7, 100, 116);
        }

        .login-link {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
        }

        .login-link a {
            color:rgb(217, 16, 120);
            text-decoration: none;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        @media (max-width: 480px) {
            .registration-container {
                margin: 40px 20px;
                padding: 25px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="registration-container">
        <h2>Inscription</h2>
        
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}
        
        <form action="{{ path('inscription_page') }}" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username *</label>
                <input type="text" class="form-control" id="username" required name="username" minlength="3" placeholder="Enter your username">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email *</label>
                <input type="email" class="form-control" id="email" required name="email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password *</label>
                <input type="password" class="form-control" id="password" required name="password" minlength="6" placeholder="Enter your password">
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" required name="confirm_password" placeholder="Confirm your password">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            
            <div class="login-link">
                Already have an account? <a href="{{ path('connexion_page') }}">Login here</a>
            </div>
        </form>
    </div>
{% endblock %}
