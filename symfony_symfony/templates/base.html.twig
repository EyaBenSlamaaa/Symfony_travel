<link rel="stylesheet" href="{{ asset('css/style.css') }}">
       <style>
    body {
        margin: 0;
        padding: 0;
    }

    .custom-navbar {
        background-color: rgba(255, 255, 255, 0.95);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        font-size: 1.6rem; 
        font-weight: 600;
        color: #333;
        text-decoration: none;
    }

    .navbar-brand img {
        height: 35px; 
        margin-right: 10px;
    }

    .custom-btn {
        border: none;
        padding: 6px 12px; 
        border-radius: 5px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
    }

    .btn-login {
        background-color: #007bff;
        color: white;
    }

    .btn-login:hover {
        background-color: #0056b3;
    }

    .btn-signup {
        background-color: #28a745;
        color: white;
    }

    .btn-signup:hover {
        background-color: #218838;
    }

    .btn-logout {
        background-color: #dc3545;
        color: white;
         text-align: center;
    }

    .btn-logout:hover {
        background-color: #b02a37;
    }
      .admin-link {
        display: inline-block;
        padding: 8px 16px;
        font-size: 1rem;
        font-weight: 600;
        color:rgb(0, 0, 0); 
        text-decoration: none;
        border-radius: 5px;
        transition: transform 0.3s, color 0.3s;
    }

    .admin-link:hover {
        transform: scale(1.1); 
        color:rgb(3, 20, 39); 
    }

    .admin-link:active {
        transform: scale(1);
    }
</style>


        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home_page') }}">
    <img src="https://th.bing.com/th/id/OIP.KjP6eJHeEmMD_tdg041tpwHaHp?w=182&h=187&c=7&r=0&o=5&dpr=1.3&pid=1.7" alt="Notes Logo">
  Site
</a>

                <div class="navbar-collapse" id="navbarNav">
    <div class="d-flex ms-auto">
        {% if app.session.get('user_id') %}

             <a class="admin-link" href="{{ path('home_page') }}">
              Home
            </a>
            <a class="admin-link" href="{{ path('connexionAdmin_page') }}">
                Voyages
            </a>
            <a class="admin-link" href="{{ path('connexionAdmin_page') }}">
              My Reservations
            </a>
            <a class="admin-link" href="{{ path('connexionAdmin_page') }}">
                Admin
            </a>

            <a class="btn custom-btn btn-logout" href="{{ path('deconnexion_page') }}">
            <i class='bx bx-log-out' ></i>
                Logout
            </a>
            
        {% else %}
            <a class="btn custom-btn btn-login me-2" href="{{ path('connexion_page') }}">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
            <a class="btn custom-btn btn-signup" href="{{ path('inscription_page') }}">
                <i class="fas fa-user-plus me-1"></i> Signup
            </a>
        {% endif %}
    </div>
</div>

            </div>
        </nav>
        {% block body %}{% endblock %}
